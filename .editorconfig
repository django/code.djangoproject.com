# http://editorconfig.org

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[*.py]
max_line_length = 88

[*.{html,json}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.{scss,js}]
indent_style = space
indent_size = 4
